<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info',booker:@booker,user:@user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to edit_book_path(@book), class: 'btn btn-sm btn-success edit_book_9753' do %>
                  Edit
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: 'btn btn-sm btn-danger destroy_book_9753' do %>
                  Dedtroy
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

