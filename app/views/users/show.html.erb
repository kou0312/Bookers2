<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info',booker:@booker,user:@user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th class="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td><%= image_tag @book.get_profile_image %></td>
              <td>
              <%= link_to book_path(f.id) do %>
                <%= f.title %>
              <% end %>
              </td>
              <td><%= f.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>